<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs', { page: 'Admin Menu' }) %>
  <body>
    <%- include('partials/adminNav.ejs') %>
    
    <div class="container">


      <div class="row">
        <div class="col d-flex justify-content-center">
          <p class="display-6 my-5">Full Menu</p>
          <p>Click on Item to edit...</p>
        </div>
      </div>

      <div class="row d-flex justify-content-center">
        <div class="col-md-12 col-lg-10 col-xl-8">
          <div class="row">
            <div class="col d-flex justify-content-end">
              <p class="bg-success text-white py-1 px-2 rounded mx-5">Lunch</p>
              <p class="bg-danger text-white py-1 px-2 rounded">Dinner</p>
            </div>
          </div>
        </div>
      </div>


  

      <% for(let idx = menuItems.length -1; idx >= 0; idx--){ %> <% const
      menuItem = menuItems[idx] %>
      <div class="row d-flex justify-content-center mb-2">
        <div class="col-md-12 col-lg-10 col-xl-8">
          <div class="card shadow">
            <div class="card-header d-flex justify-content-between">
              <p id="menuDishName">
                <!-- Button trigger modal -->
                  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    <%= menuItem.dishName %>
                  </button>

                  <!-- Modal -->
                  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <form
                          action="/admin/menu/<%= menuItem.id %>?_method=DELETE"
                          method="POST">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel"><%= menuItem.dishName %></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body justify-content-center">
                              <button type="button" class="btn btn-success" > Lunch $<%= menuItem.lunchPrice %></button>
                              <button type="button" class="btn btn-danger">Dinner $<%= menuItem.dinnerPrice %></button>

                            <div class="card shadow">
                                <img
                                  src="<%= menuItem.foodPhoto %>"
                                  class="card-img-top specialsCardImg"
                                  alt="..."
                                />
                                <div class="card-body">
                                  <p class="card-text"><%= menuItem.description %></p>
                                </div>
                            </div>
                            <div class="modal-footer d-flex justify-content-end">
                             
                              <div class="">
                                <a
                                  href="/admin/menu/<%= menuItem.id %>/edit"
                                  class="btn btn-primary mx-2"
                                  ><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                  </svg></a
                                >
                                <button
                                  href="/admin/menu/<%= menuItem.id %>?_method=DELETE"
                                  type="submit"
                                  class="btn btn-danger"
                                >
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                </svg>
                                </button>

                              </div>
                            </div>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                
              </p>

              <div class="d-flex justify-content-end">
                <p class="bg-success text-white py-1 px-2 rounded mx-5 text-white">
                  $<%= menuItem.lunchPrice %>
                </p>
                <p class="bg-danger text-white py-1 px-2 rounded text-white">
                  $<%= menuItem.dinnerPrice %>
                </p>
              </div>
              
            </div>

            <div class="card-body">
              <p class="card-text"><%= menuItem.description %></p>
            </div>
          </div>
        </div>
      </div>
      <% } %>


    </div>

  </body>
</html>

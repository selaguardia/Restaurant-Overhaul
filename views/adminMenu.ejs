<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs', { page: 'Admin Menu' }) %>
  <body>
    <%- include('partials/adminNav.ejs') %>
    
    <div class="container">

      <div class="row">
        <div class="col d-flex justify-content-center">
          <p class="display-6">Full Menu</p>
        </div>
      </div>
      <div class="row d-flex justify-content-center mb-1">
        <div class="col col-lg-8">
          <div class="row">
            <div class="col d-flex justify-content-end">
              <p class="bg-success text-white py-1 px-2 rounded mx-5">Lunch</p>
              <p class="bg-danger text-white py-1 px-2 rounded">Dinner</p>
            </div>
          </div>
        </div>
      </div>
      
      <% for(let idx = menuItems.length -1; idx >= 0; idx--){ %> <% const menuItem =
        menuItems[idx] %>
        <div class="row d-flex justify-content-center mb-1">
          <div class="col col-lg-8">
          <div class="card shadow">
            <div class="card-header d-flex justify-content-between">
              <p id="menuDishName"><a class="text-decoration-none" href="/admin/menu/<%= menuItem.id %>"><%= menuItem.dishName %></a></p>
              
              <p class="py-1 px-2 bg-success rounded text-white">$<%= menuItem.lunchPrice %></p>
              <p class="py-1 px-2 bg-danger rounded text-white">$<%= menuItem.dinnerPrice %></p>
            </div>
            <div class="card-body" >
              <p class="card-text">
                <%= menuItem.description %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>

  </body>
</html>

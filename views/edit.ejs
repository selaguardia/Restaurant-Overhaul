<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs', { page: 'Edit Menu Item'}) %>
  <body>
    <%- include('partials/adminNav.ejs') %>

      <div class="container">
        
        <div class="row">
          <div class="col-12">
            <h1 class="display-4 text-center">Edit Menu Item</h1>
          </div>
        </div>
        
        <div class="row">
  
          <div class="col-2"></div>
  
          <div class="col">
            
            <form action="/admin/menu/<%= menuItem.id %>?_method=PUT" method="POST">
              <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Name</span>
                <input
                  name="dishName"
                  id="dishName"
                  type="text"
                  class="form-control"
                  aria-label="Username"
                  aria-describedby="basic-addon1"
                  value="<%= menuItem.dishName %>"
                />
              </div>
  
              <div class="input-group mb-3">
                <span class="input-group-text">Description:</span>
                <textarea
                  name="description"
                  id="description"
                  class="form-control"
                  aria-label="With textarea"
                  type="text"
                ><%= menuItem.description %></textarea>
              </div>
  
              <div class="d-flex">
                <label for="lunchPrice" class="form-label p-2">Lunch Price</label>
                <div class="input-group mb-3">
                  <span class="input-group-text">$</span>
                  <input
                    name="lunchPrice"
                    id="lunchPrice"
                    type="text"
                    class="form-control"
                    aria-label="Amount (to the nearest dollar)"
                    value="<%= menuItem.lunchPrice %>"
                  />
                </div>
      
                <label for="dinnerPrice" class="form-label p-2">Dinner Price</label>
                <div class="input-group mb-3">
                  <span class="input-group-text">$</span>
                  <input
                    name="dinnerPrice"
                    id="dinnerPrice"
                    type="text"
                    class="form-control"
                    aria-label="Amount (to the nearest dollar)"
                    value="<%= menuItem.dinnerPrice %>"
                  />
                </div>
              </div>
    
              <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon3"
                  >Photo (optional)</span
                >
                <input
                  name="foodPhoto"
                  id="foodPhoto"
                  type="text"
                  class="form-control"
                  aria-describedby="basic-addon3"
                  value="<%= menuItem.foodPhoto %>"
                />
              </div>
    
              
              
              <button type="submit" class="btn btn-primary mt-3">Update</button>
            </form>
          </div>
          
          <div class="col-2"></div>
  
        </div>
      </div>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs', { page: 'Menu Item'}) %>
  <body>
    <%- include('../partials/nav.ejs') %>
    <div class="container">
      <div class="row">
        <div class="col d-flex justify-content-center">
          <p class="display-6"><%= menuItem.dishName %></p>
        </div>
      </div>
      
      
      <div class="card mb-3" >
        <form
          action="/admin/menu/<%= menuItem.id %>?_method=DELETE"
          method="POST"
        >
          <div class="row g-0">
            <div class="col-md-4">
              <img
                src="<%= menuItem.foodPhoto %>"
                class="img-fluid rounded-start"
                style="width: auto; min-height: 100%"
                alt="..."
              />
            </div>
            <div class="col-md-8 bg-success">
              <div class="card-body text-white">
                <h5 class="card-title"><%= menuItem.dishName %></h5>
                <p class="card-text"><%= menuItem.description %></p>
                
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>


  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs', { page: 'Add Menu Item'}) %>
  <body>
    <%- include('partials/adminNav.ejs') %>
    <div class="container">
      
      <div class="row">
        <div class="col-12">
          <h1 class="display-4 text-center">Add New Menu Item</h1>
        </div>
      </div>
      
      <div class="row">

        <div class="col-2"></div>

        <div class="col">
          
          <form action="/admin/menu" method="POST" class="bg-success p-5 rounded">
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">Name</span>
              <input
                name="dishName"
                id="dishName"
                type="text"
                class="form-control input"
                aria-label="Username"
                aria-describedby="basic-addon1"
                required
              />
            </div>

            <div class="input-group mb-3">
              <span class="input-group-text">Description:</span>
              <textarea
                name="description"
                id="description"
                class="form-control input"
                aria-label="With textarea"
                type="text"
                required
              ></textarea>
            </div>

            <div class="d-flex">
              <label for="lunchPrice" class="form-label p-2 text-white">Lunch Price</label>
              <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input
                  name="lunchPrice"
                  id="lunchPrice"
                  type="number"
                  class="form-control input"
                  aria-label="Please Enter Lunch Price"
                  required
                />
              </div>
    
              <label for="dinnerPrice" class="form-label p-2 text-white">Dinner Price</label>
              <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input
                  name="dinnerPrice"
                  id="dinnerPrice"
                  type="number"
                  class="form-control input"
                  aria-label="Amount (to the nearest dollar)"
                  required
                />
              </div>
            </div>
  
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon3"
                >Photo (optional)</span
              >
              <input
                name="foodPhoto"
                id="foodPhoto"
                type="text"
                class="form-control input"
                aria-describedby="basic-addon3"
                required
              />
            </div>
  
            <div class="col-md">
              <div class="form-floating">
                <select
                  name="category"
                  class="form-select form-control input"
                  id="floatingSelectGrid"
                  aria-label="Floating label select example"
                >
                  <option selected>Food Category</option>
                  <option value="Appetizers">Appetizers</option>
                  <option value="Soup and Salad">Soup and Salad</option>
                  <option value="Pasta">Pasta</option>
                  <option value="Sandwiches">Sandwiches</option>
                  <option value="Meat and Poultry">Meat and Poultry</option>
                  <option value="Pizza">Pizza</option>
                  <option value="Seafood">Seafood</option>
                  <option value="Dessert">Dessert</option>
                </select>
              </div>
            </div>
            <input type="hidden" name="user" value="<%= user %>">
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
          </form>
        </div>
        
        <div class="col-2"></div>

      </div>
    </div>
  </body>
</html>

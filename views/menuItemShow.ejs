<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs', { page: 'Menu Item'}) %>
  <body>
    <%- include('partials/adminNav.ejs') %>

    <div class="container">
      <div class="row">
        <div class="col d-flex justify-content-center">
          <p class="display-6"><%= menuItem.dishName %></p>
        </div>
      </div>
      
      
      <div class="card mb-3" >
        <form
          action="/admin/menu/<%= menuItem.id %>?_method=DELETE"
          method="POST"
        >
          <div class="row g-0">
            <div class="col-md-4">
              <img
                src="<%= menuItem.foodPhoto %>"
                class="img-fluid rounded-start"
                style="width: auto; min-height: 100%"
                alt="..."
              />
            </div>
            <div class="col-md-8 bg-success">
              <div class="card-header d-flex justify-content-center">
                <p class="py-1 px-2 bg-danger rounded text-white mx-5">Lunch $<%= menuItem.lunchPrice %></p>
                <p class="py-1 px-2 bg-danger rounded text-white">Dinner $<%= menuItem.dinnerPrice %></p>
              </div>
              <div class="card-body bg-success text-white">
                <h5 class="card-title"><%= menuItem.dishName %></h5>
                <p class="card-text"><%= menuItem.description %></p>
                <p class="card-text">
                  <a
                    href="/admin/menu/<%= menuItem.id %>/edit"
                    class="btn btn-primary mx-2"
                    ><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                      <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                      <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                    </svg></a
                  >
                  <button
                    href="/admin/menu/<%= menuItem.id %>?_method=DELETE"
                    type="submit"
                    class="btn btn-danger"
                  >
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                  </svg>
                  </button>
                </p>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>

    <section class="py-5">
      <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
          <div class="col-md-6">
            <img
              class="card-img-top mb-5 mb-md-0"
              src="<%= menuItem.foodPhoto %>"
              alt="..."
            />
          </div>
          <div class="col-md-6">
            <h1 class="display-5 fw-bolder"><%= menuItem.dishName %></h1>
            <div class="fs-5 mb-5">
              <span>Lunch $<%= menuItem.lunchPrice %></span><br>
              <span>Dinner $<%= menuItem.dinnerPrice %></span>
            </div>
            <p><strong>Description:</strong></p>
            <p class="lead">
              <%= menuItem.description %>
            </p>
            <div class="d-flex">
              <input
                class="form-control text-center me-3"
                id="inputQuantity"
                type="num"
                value="1"
                style="max-width: 3rem"
              />
              <button class="btn btn-outline-dark flex-shrink-0" type="button">
                <i class="bi-cart-fill me-1"></i>
                Add to cart
              </button>
              <!-- Edit Button -->
              <div>
                <a
                  href="/admin/menu/<%= menuItem.id %>/edit"
                  class="btn btn-outline-dark flex-shrink-0 mx-3"
                  >Edit</a
                >
              </div>
              <!-- Delete button -->
              <form
                action="/admin/menu/<%= menuItem.id %>?_method=DELETE"
                method="POST"
              >
                <input
                  class="btn btn-outline-dark flex-shrink-0"
                  type="submit"
                  value="Delete"
                />
              </form>
            </div>
          </div>
      </div>
    </div>
    </section>
  </body>
</html>
